<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-zinc-300 flex items-center justify-center "
>
  <div class="w-[28vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl mb-10 tracking-tighter text-center font-semibold text-zinc-700"
    >
      Create New Account
    </h1>
    <form action="/register" method="POST">
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="fullname"
        placeholder="full name"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="border-2 mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        value="Create New Account"
        type="submit"
      />
      <p class="text-xs font-semibold text-zinc-700 mt-8 text-center mx-auto">
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy
      </p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
  </div>
</div>

<% include ./partials/footer.ejs %>
